@model Answer
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Write An Answer:</label>
                    <textarea asp-for="TheAnswer" class="form-control" rows="4" placeholder="Enter your Answer here..."></textarea>
                </div>
                <input asp-for="QuestionID" type="hidden" value="@ViewData["questionId"]" />
                <input asp-for="UserId" type="hidden" value="@_UserManager.GetUserId(User)" />
                <button type="submit" asp-action="WriteAnAnswer" class="btn btn-primary btn-block mt-3">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

